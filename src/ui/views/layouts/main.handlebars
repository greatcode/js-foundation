<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{> page/title}}</title>
</head>
<body>
  {{{body}}}

  {{! Only needs the Handlebars Runtime, because the exposed templates are precompiled. }}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.runtime.min.js"></script>
  <script>
    (function () {
      var revive    = Handlebars.template,
          templates = Handlebars.templates = Handlebars.templates || {};

      {{#templates}}
        templates['{{{name}}}'] = revive({{{template}}});
      {{/templates}}
    }());
  </script>

</body>
</html>